#include <iostream>
using namespace std;

int getNumber()
{
  int num;
  cout <<"Enter a number: ";
  cin >> num;
  return num;
}

int smallestFactor( int num )
{
  for (int =2;i<=num;i++)
    {
      if(num%i== 0)
	return i;
      return num;
    }
}
int main()
{
  int number = getNumber();
  int factor = smallestFactor(number); 
 //  cout << "Number: " << number << endl;
  // cout << "Smallest factor: " << factor << endl;
  return 0;
}
