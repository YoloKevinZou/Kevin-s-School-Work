//without the use of prototypes

#include<iostream>
using namespace std;

int getNumber()
{
  cout << "Enter a number: ";
  int num;
  cin >> num;
  return num;
}

int square( int x )
{
  return x * x;
}

void printNumber( int x )
{
  cout << "Value is: " << x << endl;

  return;
}

int main()
{
  int n = getNumber();

  int ans = square( n );

  printNumber( ans );

  return 0;
}
